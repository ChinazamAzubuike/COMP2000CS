<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEmployee"
    android:background="@drawable/gradient"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"

        android:layout_height="85dp"
        android:background="#000000"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/edit_employee_tab"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="31sp"
        android:textStyle="bold"

        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:padding="16dp"

        app:layout_constraintTop_toBottomOf="@+id/textView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:background="#B30B0000"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/textView">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="18dp"
                android:backgroundTint="#ffffff"
                android:text="@string/save"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="@string/employee_id_text"
                android:textColor="#ffffff"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/editTextEmployeeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="number"
                android:hint="@string/id"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="#ffffff"
                android:textColorHint="#FFFFFF" />


            <!-- First Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="@string/firstname_colon"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:hint="@string/first_name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#ffffff"
                android:textColorHint="#FFFFFF"
                tools:ignore="VisualLintTextFieldSize" />

            <!-- Last Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:text="@string/lastname_colon"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:hint="@string/lastname"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#ffffff"
                android:textColorHint="#FFFFFF"
                tools:ignore="VisualLintTextFieldSize" />

            <!-- Email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:text="@string/email_colon"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="emailAddress"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColor="#ffffff"
                android:textColorHint="#FFFFFF"
                tools:ignore="VisualLintTextFieldSize" />

            <!-- Department -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:text="@string/department_colon"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="organizationName"
                android:hint="@string/department"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="#ffffff"
                android:textColorHint="#FFFFFF"
                tools:ignore="VisualLintTextFieldSize" />

            <!-- Joining Date -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:text="@string/joining_date_colon"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextJoiningDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="date"
                android:hint="@string/joiningdate"
                android:inputType="date"
                android:minHeight="48dp"
                android:textColor="#ffffff"
                android:textColorHint="#FFFFFF"
                tools:ignore="VisualLintTextFieldSize" />

            <!-- Leaves -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:text="@string/leaves_colon"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextLeaves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="number"
                android:hint="@string/leaves"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="#ffffff"
                android:textColorHint="#FFFFFF"
                tools:ignore="VisualLintTextFieldSize" />

            <!-- Salary -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:text="@string/salary_colon"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="number"
                android:hint="@string/salary"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:textColor="#ffffff"
                android:textColorHint="#FFFFFF"
                tools:ignore="VisualLintTextFieldSize" />




        </LinearLayout>


    </ScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_icon_color"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

