<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indigo"
    tools:context=".FifthActivity">




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Navigation"
        android:layout_width="411dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_gravity="center"
            android:contentDescription="@string/profile_image"
            app:srcCompat="@drawable/profileicon2" />

        <ImageView
            android:id="@+id/imageView3"
            android:contentDescription="@string/notifs_image"

            android:layout_width="71dp"
            android:layout_height="67dp"

            android:layout_marginHorizontal="316dp"
            android:layout_marginVertical="12dp"

            app:srcCompat="@drawable/notifsbell" />

        <ImageView
            android:contentDescription="@string/settings_image"
            android:id="@+id/imageView2"
            android:layout_width="74dp"
            android:layout_height="61dp"

            android:layout_marginVertical="14dp"
            android:layout_marginHorizontal="24dp"

            app:srcCompat="@drawable/settingsicon" />





    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <TextView
        android:text="@string/personal_details_tab"
        android:textColor="#ffffff"
        android:textSize="31sp"

        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="85dp"

        android:background="@color/softblack"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"

        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toTopOf="@id/Navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">


        <Button
            android:id="@+id/backButton"
            android:textAllCaps="false"
            android:text="@string/backButton"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/grey"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="130dp"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />


        <androidx.cardview.widget.CardView
            android:layout_width="298dp"

            android:layout_marginTop="45dp"

            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            >




            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dp"

                android:layout_height="38dp"
                android:contentDescription="@string/temppencilicon"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toEndOf="@string/about_you"
                app:srcCompat="@drawable/temppencilicon"


                />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                >

                <TextView
                    android:text="@string/about_you"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="1dp"

                    android:paddingTop="9dp"
                    android:textColor="@color/softblack"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />




            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="298dp"

            android:layout_marginTop="32dp"

            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">




            <ImageView
                android:id="@+id/imageVie7"
                android:layout_width="40dp"

                android:layout_height="38dp"
                android:contentDescription="@string/temppencilicon"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toEndOf="@string/about_you"
                app:srcCompat="@drawable/temppencilicon"


                />





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                >

                <TextView
                    android:text="@string/house_info"
                    android:layout_width="wrap_content"
                    android:layout_height="125dp"

                    android:paddingStart="15dp"
                    android:paddingEnd="1dp"
                    android:paddingTop="9dp"

                    android:textColor="@color/softblack"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="298dp"

            android:layout_marginTop="32dp"

            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">



            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="40dp"

                android:layout_height="38dp"
                android:contentDescription="@string/temppencilicon"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toEndOf="@string/about_you"
                app:srcCompat="@drawable/temppencilicon"


                />





            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                >

                <TextView
                    android:text="@string/employee_info"
                    android:layout_width="wrap_content"
                    android:layout_height="125dp"

                    android:paddingStart="15dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="15dp"

                    android:textColor="@color/softblack"
                    android:textSize="20sp"

                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <Button
            android:text="@string/main_profile"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button4"

            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:backgroundTint="@color/empcolor"
            android:textStyle="bold"

            android:textColor="@color/yourprofile_color"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:layout_marginTop="82dp"/>
    </LinearLayout>




    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

